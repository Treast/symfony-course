{% extends 'security/base.html.twig' %}

{% block title %}
    {{ parent() }}
    Login Form
{% endblock title %}

{% block content %}
    {% if error %}
        <div class="alert alert-danger">{{ error.message }}</div>
    {% endif %}
    <form action="{{ path('login_check') }}" method="POST" class="mt-5 mb-5">
        <div class="form-group row">
            <label for="username" class="label-control col-md-2">Username</label>
            <input type="text" class="form-control col-md-8" id="username" name="_username">
        </div>
        <div class="form-group row">
            <label for="username" class="label-control col-md-2">Password</label>
            <input type="password" class="form-control col-md-8" id="username" name="_password">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
{% endblock %}